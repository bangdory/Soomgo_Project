<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.soomgo.soomgo_project.mappers.UserMapper">

    <!-- 사용자 이메일과 비밀번호로 사용자 정보 조회 -->
    <select id="findByEmailAndPassword" parameterType="map" resultType="org.soomgo.soomgo_project.domain.UserDTO">
        SELECT * FROM user WHERE user_email = #{email} AND user_password = #{password}
    </select>

    <select id="findUserProfileByUserNum" parameterType="int" resultType="org.soomgo.soomgo_project.domain.UserProfileDTO">
    SELECT user_nickname FROM user_profile WHERE user_num = #{user_num}
    </select>

</mapper>
