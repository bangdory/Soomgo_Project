<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.soomgo.soomgo_project.mappers.RequestSentMapper">

    <!-- 사용자의 이메일로 요청을 조회 -->
    <select id="getRequestsByUserEmail" parameterType="string" resultType="org.soomgo.soomgo_project.domain.requestDTO">
        SELECT * FROM reqsend
        WHERE writer = #{email}
    </select>

</mapper>


